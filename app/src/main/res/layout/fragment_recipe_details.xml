<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/lightGray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewTitleDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/darker"
                    android:fontFamily="@font/montserrat_alternates"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="48sp" />

                <ImageView
                    android:id="@+id/imageViewDetails"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    tools:src="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/textViewReadyInMins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/darker"
                    android:textAlignment="center"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/montserrat_alternates"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="8dp"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textViewOverview"
                    android:layout_width="match_parent"
                    android:textColor="@color/darker"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_alternates"
                    android:textAlignment="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="8dp"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="sans-serif"
                    android:text="Copy recipe to add to meal planner" />

                <TextView
                    android:id="@+id/textViewFindRecipe"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/montserrat_alternates"
                    android:text="@string/access_the_full_recipe"
                    android:textAlignment="center"
                    android:textColor="@color/darker"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textViewURL"
                    android:layout_width="match_parent"
                    android:textColor="@color/fettlePurple"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_alternates"
                    android:textAlignment="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="8dp"
                    android:autoLink="web"
                    android:textSize="18sp" />

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>